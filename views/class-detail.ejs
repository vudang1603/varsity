<%- include('header'); %>

<!-- Page breadcrumb -->
<section id="mu-page-breadcrumb">
    <div class="container">
      <div class="row">
        <div class="col-md-12">
          <div class="mu-page-breadcrumb-area">
            <h2><%-title%></h2>
            <ol class="breadcrumb">
             <li><a href="#">Trang Chủ</a></li>            
             <li class="active"><%-title%></li>
           </ol>
          </div>
        </div>
      </div>
    </div>
  </section>
  <!-- End breadcrumb -->
  <section id="mu-course-content">
    <div class="container">
      <div class="row">
        <div class="col-md-12">
          <div class="mu-course-content-area">
             <div class="row">
               <div class="col-md-9">
                 <!-- start course content container -->
                 <div class="mu-course-container mu-course-details">
                   <div class="row">
                     <div class="col-md-12">
                       <div class="mu-latest-course-single">
                         <figure class="mu-latest-course-img">
                           <a><img src="data:image/<%=image.contentType%>;base64,<%=image.data.toString('base64')%>" alt="img"></a>
                           <figcaption class="mu-latest-course-imgcaption">
                             <span><i class="fa fa-clock-o"></i><%=classone.timetable%></span>
                           </figcaption>
                         </figure>
                         <div class="mu-latest-course-single-content">
                           <h2><a><%=classone.classname%></a></h2>
                           <h4>Thông Tin Lớp Học</h4>
                           <ul>
                             <li> <span>Học Phí</span> <span><%=classone.price%> vnđ</span></li>
                             <li> <span>Mục Tiêu Lớp Học</span> <span>Nắm vững kiến thức lớp 12 ở mức độ cơ bản.</span></li>
                             <li> <span>Số Lượng Học Viên</span> <span><%=classone.quantity%></span></li>

                           </ul>
                           <h4>Mô Tả</h4>
                           <p><%=classone.description%></p>
                           <h4>Thời Khoá Biểu</h4>
                           <div class="table-responsive">
                            <%=classone.timetable%>
                            <p>Khi tham gia lớp học sẽ được trao đổi để có thời khóa biểu tốt hơn</p>
                           <a class="mu-post-btn" href="../register-class/<%=classone._id%>">ĐĂNG KÝ</a>
                           </div>
                         </div>
                       </div> 
                     </div>                                   
                   </div>
                 </div>
                 <!-- end course content container -->
                 <!-- start related course item -->
                 <div class="row">
                   <div class="col-md-12">
                     <div class="mu-related-item">
                   <h3>Các Lớp Học Liên Quan</h3>
                   <div class="mu-related-item-area">
                     <div id="mu-related-item-slide">

                      <% classroom.forEach(function(classroom) {%>
                       <div class="col-md-6">
                        <div class="mu-latest-course-single">
                            <figure class="mu-latest-course-img">
                              <a href="../class-detail/<%=classroom.id%>"><img src="data:classroom/<%=classroom.image.contentType%>;base64,<%=classroom.image.data.toString('base64')%>" alt="img" style="height: 300px;"></a>
                              <figcaption class="mu-latest-course-imgcaption">
                                <span><i class="fa fa-clock-o"></i><%=classroom.timetable%></span>
                              </figcaption>
                            </figure>
                            <div class="mu-latest-course-single-content">
                             <h4><a href="../class-detail/<%=classroom.id%>"><%=classroom.classname%></a></h4>
                             <p>Gia sư: <%=classroom.author%></p>
                              <div class="mu-latest-course-single-contbottom">
                                 <a class="mu-course-details" href="../class-detail/<%=classroom.id%>">Chi Tiết</a>
                                 <span class="mu-course-price"><%=classroom.price%> vnđ</span>
                              </div>
                            </div>
                          </div> 
                       </div>
                       <%})%>
                       
                     </div>
                   </div>
                 </div>
                   </div>
                 </div>
                 <!-- end start related course item -->
               </div>
               <div class="col-md-3">
                 <!-- start sidebar -->
                 <aside class="mu-sidebar">
                   <!-- start single sidebar -->
                   <div class="mu-single-sidebar">
                     <h3>Danh Mục</h3>
                     <ul class="mu-sidebar-catg">
                        <li><a href="#">Toán</a></li>
                        <li><a href="">Hoá Học</a></li>
                        <li><a href="">Vật Lý</a></li>
                        <li><a href="">Sinh Học</a></li>
                        <li><a href="">Anh Văn</a></li>
                        <li><a href="">Ngữ Văn</a></li>
                     </ul>
                   </div>
                   <!-- end single sidebar -->
                   <!-- start single sidebar -->
                   <div class="mu-single-sidebar">
                    <h3>Khoá Học Phổ Biến</h3>
                    <div class="mu-sidebar-popular-courses">
                      <% course.forEach(function(course) {%>
                      <div class="media">
                        <div class="media-left">
                          <a href="course-detail">
                            <a href="../course-detail/<%=course.id%>"><img src="data:course/<%=course.image.contentType%>;base64,<%=course.image.data.toString('base64')%>" alt="img" style="height: 50px;width: 60px;"></a>
                          </a>
                        </div>
                        <div class="media-body">
                          <h5 class="media-heading"><a href="../course-detail/<%=course.id%>"><%=course.title%></a></h5>                      
                          
                        </div>
                      </div>
                      <%})%>
                    </div>
                  </div>
                   <!-- end single sidebar -->
                   <!-- start single sidebar -->
                   
                   <!-- end single sidebar -->
                   <!-- start single sidebar -->
                   
                   <!-- end single sidebar -->
                 </aside>
                 <!-- / end sidebar -->
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

<%- include('footer'); %>
